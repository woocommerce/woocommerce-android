    -->

    <!--
        Set a custom cursor for search views so they don't inherit colorAccent
    -->
    <style name="SearchViewCursor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/searchview_cursor</item>
    </style>

    <!--
        Text Styles
    -->
    <style name="Woo.TextAppearance" parent="android:TextAppearance.DeviceDefault">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="Woo.TextAppearance.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Woo.TextAppearance.Title">
        <item name="android:textColor">@color/default_text_title</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="Woo.TextAppearance.Title.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Woo.TextAppearance.Title.Small">
        <item name="android:textColor">@color/default_text_title</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="Woo.TextAppearance.Title.Large">
        <item name="android:textColor">@color/default_text_title</item>
        <item name="android:textSize">@dimen/text_extra_large</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="Woo.TextAppearance.Title.Large.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Woo.TextAppearance.Medium">
        <item name="android:textColor">@color/default_text_title</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="Woo.TextAppearance.Medium.Black">
        <item name="android:textColor">@color/black_85</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="Woo.TextAppearance.Medium.Grey">
        <item name="android:textColor">@color/wc_grey_medium</item>
    </style>

    <style name="Woo.TextAppearance.Medium.Purple">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Woo.TextAppearance.Medium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Woo.TextAppearance.Large">
        <item name="android:textColor">@color/default_text_title_color</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="Woo.TextAppearance.Small">
        <item name="android:textColor">@color/default_text</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="Woo.TextAppearance.Label">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/default_text_label_color</item>
    </style>

    <style name="Woo.TextAppearance.Label.XL">
        <item name="android:textSize">@dimen/text_double_extra_large</item>
        <item name="android:textColor">@color/default_text_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Woo.TextAppearance.Label.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Woo.TextAppearance.Button">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/default_button_fg_color</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Woo.TextAppearance.Button.Toggle">
        <item name="android:textColor">@color/toggle_button_text_color</item>
    </style>
    <!--
        Button Styles
    -->


    <style name="Woo.Button.Lowercase">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Woo.Button.Purple" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="android:colorAccent">@color/button_purple_bg_color</item>
        <item name="android:colorButtonNormal">@color/black</item>
    </style>

    <style name="Woo.Button.White" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/wc_purple</item>
        <item name="android:colorButtonNormal">@color/white</item>
    </style>

    <style name="Woo.Button.Grey" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/wc_purple</item>
        <item name="colorButtonNormal">@color/wc_grey_light</item>
        <item name="android:backgroundTint">@color/wc_grey_light</item>
    </style>

    <style name="Woo.TextView.Title">
        <item name="android:paddingStart">@dimen/card_padding_start</item>
        <item name="android:paddingEnd">@dimen/card_padding_end</item>
        <item name="android:paddingTop">@dimen/card_padding_top</item>
        <item name="android:paddingBottom">@dimen/card_item_padding_intra_h</item>
        <item name="android:textAppearance">@style/Woo.TextAppearance.Title</item>
    </style>
    <style name="Woo.TextView.Title.Purple">
        <item name="android:textAppearance">@style/Woo.TextAppearance.Medium.Purple</item>
    </style>
    <style name="Woo.CardExtenderButton">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:paddingEnd">@dimen/card_padding_end</item>
        <item name="android:paddingStart">@dimen/card_padding_end</item>
    </style>

    <!--
        Default List Style
    -->
    <style name="Woo.List" parent="android:Widget.DeviceDefault.ListView">
        <item name="android:listDivider">@drawable/list_divider</item>
    </style>
    <!--
        Base List Child Styles
    -->
    <style name="Woo.TextAppearance.ListItem">
        <item name="android:textSize">@dimen/list_item_text_size</item>
    </style>

    <style name="Woo.TextAppearance.ListItem.Title">
        <item name="android:textColor">@color/list_item_text_title</item>
    </style>

    <!--
        OrderDetail Styles
    -->
    <style name="Woo.OrderDetail.CardTitle" parent="Woo.TextView.Title.Purple"/>
    <style name="Woo.OrderDetail.TextAppearance.Heading" parent="Woo.TextAppearance.Medium"/>
    <style name="Woo.OrderDetail.TextAppearance.Content" parent="Woo.TextAppearance.Small"/>
    <style name="Woo.OrderDetail.TextAppearance.SectionTitle" parent="Woo.TextAppearance.Title"/>
    <style name="Woo.OrderDetail.TextAppearance" parent="Woo.TextAppearance"/>
    <style name="Woo.OrderDetail.TextAppearance.Red">
        <item name="android:textColor">@color/wc_red</item>
    </style>
    <style name="Woo.OrderDetail.TextAppearance.Bold" parent="Woo.TextAppearance.Bold"/>
    <style name="Woo.OrderDetail.TextAppearance.Label" parent="Woo.TextAppearance.Label"/>
    <style name="Woo.OrderDetail.TextAppearance.Label.Bold" parent="Woo.TextAppearance.Label.Bold"/>
    <!--
        Refund Styles
    -->
    <style name="Woo.Refunds.TextAppearance" parent="Woo.TextAppearance"/>
    <style name="Woo.Refunds.TextAppearance.Bold" parent="Woo.TextAppearance.Bold"/>

    <style name="Woo.Refunds.EditText" parent="@style/EditText">
        <item name="android:textColorHint">@color/edit_text_color_control_normal</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="colorControlNormal">@color/divider_color</item>
        <item name="colorControlActivated">@color/divider_color</item>
        <item name="colorControlHighlight">@color/divider_color</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="Woo.Refunds.TextAppearance.SectionTitle" parent="Woo.TextAppearance.Title"/>

    <style name="Woo.Refunds.Button" parent="Woo.Button">
        <item name="android:textAlignment">viewEnd</item>
    </style>

    <!--
        Settings Styles
    -->
    <style name="Woo.Settings"/>

    <style name="Woo.Settings.Label" parent="Woo.TextAppearance">
        <item name="android:textColor">@color/wc_grey_dark</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:paddingStart">@dimen/settings_padding</item>
        <item name="android:paddingEnd">@dimen/settings_padding</item>
        <item name="android:paddingBottom">@dimen/settings_padding</item>
        <item name="android:paddingTop">@dimen/settings_padding</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Woo.Settings.LabelWithButton" parent="Woo.Settings.Label">
        <item name="android:paddingBottom">@dimen/margin_small</item>
    </style>

    <style name="Woo.Settings.LabelWithDetail" parent="Woo.Settings.LabelWithButton"/>

    <style name="Woo.Settings.Label.Detail" parent="Woo.TextAppearance">
        <item name="android:textColor">@color/wc_grey_darker</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:paddingStart">@dimen/settings_padding</item>
        <item name="android:paddingEnd">@dimen/settings_padding</item>
        <item name="android:paddingBottom">@dimen/settings_padding</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!--
        Offline Status Bar
    -->
    <style name="Woo.StatusBar"/>
    <style name="Woo.StatusBar.Background">
        <item name="android:background">@color/wc_grey_medium</item>
        <item name="android:padding">@dimen/offline_status_bar_padding</item>
    </style>
    <style name="Woo.StatusBar.Label">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_caption</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!--
        Image viewer
    -->
    <style name="ImageViewer" />
    <style name="ImageViewer.Activity" parent="Theme.Woo.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!--
        Other
    -->
    <style name="Woo.Dialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="EditText" parent="Theme.Woo.DayNight">
        <item name="android:textColor">@color/edit_text_text_color</item>
        <item name="android:textColorHighlight">@color/edit_text_text_color_highlight</item>
        <item name="android:textColorHint">@color/edit_text_text_hint_color</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="colorControlActivated">@color/edit_text_color_control_activated</item>
        <item name="colorControlHighlight">@color/edit_text_color_control_highlight</item>
        <item name="colorControlNormal">@color/edit_text_color_control_normal</item>
    </style>

    <style name="Woo.OrderTracking.Add.EditText" parent="@style/EditText">
        <item name="android:textColorHint">@color/edit_text_color_control_normal</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="colorControlNormal">@color/divider_color</item>
        <item name="colorControlActivated">@color/divider_color</item>
        <item name="colorControlHighlight">@color/divider_color</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="Woo.TextAppearance.OrderTracking" parent="@style/Woo.TextAppearance">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="Woo.Dialog.Promo">
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="Woo.Dialog.Login.WhatIsJetpack" parent="Woo.Dialog.Promo"/>

    <style name="Woo.Dialog.Login.EmailHelp" parent="Woo.Dialog.Promo"/>

    <!--
        LOGIN
    -->
    <style name="Woo.Login"/>
    <style name="Woo.Login.JetpackRequired"/>
    <style name="Woo.Login.JetpackRequired.Message">
        <item name="android:textColor">@color/wc_grey_dark</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textAlignment">center</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>
    <style name="Woo.Login.JetpackRequired.SignIn">
        <item name="android:textColor">@color/wc_grey_dark</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="Woo.Login.DiscoveryError"/>
    <style name="Woo.Login.DiscoveryError.Title">
        <item name="android:textSize">@dimen/text_double_extra_large</item>
        <item name="android:textColor">@color/wc_grey_dark</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="Woo.Login.DiscoveryError.Message">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/wc_grey_dark</item>
        <item name="android:textAlignment">center</item>
    </style>
    
    <style name="Woo.Dialog.ProviderList">
        <item name="android:windowEnterAnimation">@anim/activity_slide_in_from_right</item>
        <item name="android:windowExitAnimation">@anim/activity_slide_out_to_right</item>
    </style>

    <!--
        Add Tracking Provider List
    -->
    <style name="Woo.Dialog.ProviderList.Header" parent="Woo.ListHeader">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/wc_purple</item>
        <item name="android:textSize">@dimen/list_item_text_size</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <!--
        Delete Shipment Tracking
    -->
    <style name="Woo.Delete.Button" parent="android:style/Widget.ActionButton">
        <item name="android:src">@drawable/delete_button_bg</item>
    </style>

    <!--
        Product Detail
    -->
    <style name="Woo.TextView.CaptionOld">
        <item name="android:paddingTop">@dimen/default_padding</item>
        <item name="android:paddingStart">?dialogPreferredPadding</item>
        <item name="android:paddingEnd">?dialogPreferredPadding</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <!--
        Aztec Editor
    -->
    <style name="Woo.Aztec"/>
    <style name="Woo.Aztec.Text">
        <item name="android:paddingStart">@dimen/card_padding_start</item>
        <item name="android:paddingEnd">@dimen/card_padding_end</item>
        <item name="android:paddingTop">@dimen/card_padding_top</item>
        <item name="android:paddingBottom">@dimen/card_padding_bottom</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:gravity">top|start</item>
        <item name="lineSpacingExtra">2dp</item>
    </style>
    <style name="Woo.Aztec.VisualEditor" parent="@style/Woo.Aztec.Text">
        <item name="textColor">@color/wc_black_darker</item>
        <item name="textColorHint">@color/wc_black_lighter</item>
        <item name="bulletColor">@color/wc_black_darker</item>
        <item name="quoteColor">@color/wc_black_darker</item>
        <item name="quoteBackground">@color/white</item>
        <item name="quoteMargin">0dp</item>
        <item name="quotePadding">0dp</item>
        <item name="historyEnable">true</item>
        <item name="historySize">10</item>
        <item name="linkColor">@color/colorPrimary</item>
        <item name="linkUnderline">true</item>
    </style>
    <style name="Woo.Aztec.SourceEditor" parent="@style/Woo.Aztec.Text">
        <item name="codeTextColor">@color/wc_black_darker</item>
        <item name="codeBackgroundColor">@android:color/transparent</item>
        <item name="android:inputType">textNoSuggestions|textMultiLine</item>
    </style>
    <style name="Woo.Product"/>
    <style name="Woo.Product.Label" parent="Woo.TextAppearance.Large">
        <item name="android:textColor">@color/wc_black_darker</item>
    </style>
    <style name="Woo.Product.Label.Large">
        <item name="android:textColor">@color/wc_black_darker</item>
        <item name="android:textSize">@dimen/text_extra_large</item>
    </style>
    <style name="Woo.Product.Title" parent="@style/EditText">
        <item name="android:textColor">@color/wc_black_darker</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColorHint">@color/wc_black_lighter</item>
        <item name="android:textSize">@dimen/text_extra_large</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="colorControlActivated">@color/edit_text_color_control_activated</item>
        <item name="colorControlHighlight">@color/edit_text_color_control_highlight</item>
        <item name="colorControlNormal">@color/edit_text_color_control_normal</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">textNoSuggestions|textVisiblePassword</item>
    </style>

    <style name="Woo.MaterialComponents.EditText" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/wc_black_darker</item>
        <item name="android:textColorHint">@color/wc_black_lighter</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="colorControlNormal">@color/divider_color</item>
        <item name="android:colorAccent">@color/divider_color</item>
        <item name="boxStrokeColor">@color/divider_color</item>
        <item name="hintTextAppearance">@style/Woo.MaterialComponents.EditText.HintTextAppearance</item>
        <item name="colorControlActivated">@color/divider_color</item>
        <item name="colorControlHighlight">@color/divider_color</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="Woo.MaterialComponents.EditText.HintTextAppearance" parent="Woo.TextAppearance">
        <item name="android:textColor">@color/wc_black_lighter</item>
    </style>

    <style name="Woo.MaterialComponents.EditText.Summary" parent="Woo.TextAppearance.Small">
        <item name="android:textColor">@color/wc_black_lighter</item>
    </style>

</resources>
