<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
    Stats Widget
    Home screen widgets do not support the latest design changes from the support library i.e.
    RecyclerView, ConstraintLayout etc,
    The styles defined here should only be used for the stats home screen widgets and should
    not be confused with the general styles defined in styles_base.xml.
    -->
    <style name="Woo.StatsWidgetHeader">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingStart">@dimen/minor_100</item>
        <item name="android:paddingEnd">@dimen/minor_100</item>
        <item name="android:background">@color/default_window_background</item>
    </style>

    <style name="Woo.StatsWidgetSiteIcon">
        <item name="android:paddingStart">@dimen/minor_10</item>
        <item name="android:paddingEnd">@dimen/minor_10</item>
        <item name="android:layout_marginStart">@dimen/major_75</item>
        <item name="android:layout_marginEnd">@dimen/major_75</item>
    </style>

    <style name="Woo.StatsWidgetTitle" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/text_minor_125</item>
        <item name="android:textColor">@color/color_on_surface_high</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingEnd">@dimen/minor_75</item>
    </style>

    <style name="Woo.StatsWidgetSubtitle" parent="TextAppearance.AppCompat.Body2">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/text_minor_80</item>
        <item name="android:textColor">@color/color_on_surface_disabled</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Woo.StatsWidgetError">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">@dimen/major_100</item>
        <item name="android:paddingEnd">@dimen/major_100</item>
    </style>

    <style name="Woo.StatsWidgetErrorMessage" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/text_minor_100</item>
        <item name="android:textColor">@color/color_on_surface_high</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/major_100</item>
        <item name="android:layout_marginBottom">@dimen/major_100</item>
    </style>

    <style name="Woo.StatsWidgetRetryButton" parent="TextAppearance.AppCompat.Body1">
        <item name="android:paddingStart">@dimen/major_100</item>
        <item name="android:paddingEnd">@dimen/major_100</item>
        <item name="android:textColor">@color/button_fg_selector</item>
        <item name="android:textSize">@dimen/text_minor_100</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Woo.StatsWidgetListItem">
        <item name="android:baselineAligned">false</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingEnd">@dimen/major_100</item>
        <item name="android:paddingStart">@dimen/major_100</item>
        <item name="android:minHeight">@dimen/stats_widget_list_item_min_height</item>
    </style>

    <style name="Woo.StatsWidgetListItemKey" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/text_minor_100</item>
        <item name="android:textColor">@color/color_on_surface_high</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Woo.StatsWidgetListItemValue" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/text_minor_100</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_on_surface</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">end|center_vertical</item>
    </style>

    <style name="Woo.StatsWidgetKey" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/text_minor_100</item>
        <item name="android:textColor">@color/color_on_surface_high</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="Woo.StatsWidgetValue" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/text_minor_100</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_on_surface</item>
        <item name="android:gravity">end|center_vertical</item>
    </style>

</resources>
