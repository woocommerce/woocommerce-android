<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        android:paddingTop="@dimen/minor_50"
        android:paddingBottom="@dimen/minor_50">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/filtersTitle"
            style="@style/Woo.Card.Title"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/major_100"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/orderlist_no_filters_title"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn_order_filter"
            app:layout_constraintEnd_toStartOf="@+id/btn_order_filter"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <com.woocommerce.android.widgets.WCToggleOutlinedButton
            android:id="@+id/btn_order_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/minor_100"
            android:layout_marginEnd="@dimen/major_100"
            android:text="@string/product_list_filters"
            app:backgroundTint="@color/button_outlined_bg_selector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>
