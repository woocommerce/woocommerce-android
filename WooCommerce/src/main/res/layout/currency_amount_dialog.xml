<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/currencyAmount_header"
        style="@style/Woo.TextView.Headline6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/major_125"
        android:layout_marginBottom="@dimen/minor_100"
        android:duplicateParentState="true"
        android:layout_marginStart="@dimen/major_150"
        android:layout_marginEnd="@dimen/major_150"
        tools:text="Headline 6" />

    <com.woocommerce.android.widgets.WCMaterialOutlinedCurrencyEditTextView
        android:id="@+id/currencyAmount_refundAmountInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/major_150"
        android:layout_marginEnd="@dimen/major_150"
        android:importantForAccessibility="no"
        app:supportsEmptyState="false"
        app:supportsNegativeValues="false" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/currencyAmount_message"
        style="@style/Woo.TextView.Body2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/major_150"
        android:layout_marginEnd="@dimen/major_150"
        android:layout_marginTop="@dimen/minor_100"
        tools:text="Does this sound good?"/>

</LinearLayout>
