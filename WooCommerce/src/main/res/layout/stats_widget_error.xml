<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_error"
    style="@style/Woo.StatsWidgetError"
    android:layout_width="match_parent"
    android:layout_height="@dimen/stats_widget_content_height"
    android:visibility="gone"
    tools:showIn="@layout/stats_widget_list">

    <TextView
        android:id="@+id/widget_error_message"
        style="@style/Woo.StatsWidgetErrorMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stats_widget_error_no_data" />

    <TextView
        android:id="@+id/widget_retry_button"
        style="@style/Woo.StatsWidgetRetryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/retry" />
</LinearLayout>
