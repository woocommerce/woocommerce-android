<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_surface"
    android:foreground="?selectableItemBackground">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/developerOptionsMenuIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="0.5dp"
        android:padding="@dimen/major_85"
        app:srcCompat="@drawable/ic_refresh_grey" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/developerOptionsListItemLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/major_100"
        android:paddingEnd="@dimen/major_100"
        android:layout_gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.Woo.Body1"
        android:textColor="@color/color_on_surface"
        tools:text="Clear Shared Preferences" />
</LinearLayout>
