<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_surface">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/developerOptionsMenuIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.5dp"
        android:padding="@dimen/major_85"
        app:srcCompat="@drawable/ic_refresh_grey" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/developerOptionsListItemLabel"
        style="@style/Widget.Woo.Settings.OptionValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/major_100"
        android:paddingEnd="@dimen/major_100"
        android:textColor="@color/color_on_surface"
        tools:text="Clear Shared Preferences" />
</LinearLayout>
