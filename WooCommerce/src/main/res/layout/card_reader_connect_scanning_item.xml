<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/listPreferredItemHeight"
    android:layout_marginHorizontal="@dimen/major_125"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/card_reader_connect_progress_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        tools:src="@drawable/ic_loop_24px" />

    <TextView
        android:id="@+id/card_reader_connect_progress_label"
        style="@style/Woo.TextView.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_extra_large"
        android:alpha="@dimen/alpha_emphasis_disabled"
        android:textColor="?attr/colorOnSurface"
        tools:text="Scanning for readers" />

</LinearLayout>
